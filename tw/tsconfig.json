{
  "typeRoots": [
    "./node_modules/@types"
  ],
  "lib": [
    "es2015"
  ],
  "module": "esnext",
  "target": "es6",
  "esModuleInterop": true,
  "incremental": true,
  "noEmit": false,
  "composite": false,
  "declaration": true,
  "strict": true,
  "useUnknownInCatchVariables": true,
  "allowJs": false,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./src",
    "paths": {}
  },
  "include": ["src/**/*.ts", "src/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    ".yarn"
  ]
}